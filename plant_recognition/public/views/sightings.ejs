<!doctype html>
<html lang="en">
<%- include('partials/head', { title: 'Sightings' , styles: ['/css/styling.css', '/css/sightings.css'] }) %>
  <body>
    <%- include('partials/nav') %>

      <main class="container" style="max-width:1200px;margin:2rem auto;">
        <h1>Your Sightings</h1>

        <!-- Tab Navigation -->
        <div class="tab-navigation">
          <button class="tab-btn active" onclick="switchTab('sightings')">All Sightings</button>
          <div class="dropdown-container">
            <button class="tab-btn dropdown-btn" onclick="toggleDropdown()">
              Analytics <span class="dropdown-arrow">â–¼</span>
            </button>
            <div class="dropdown-menu" id="analytics-dropdown">
              <button class="dropdown-item" onclick="switchTab('species-analytics')">Species Analytics</button>
              <button class="dropdown-item" onclick="switchTab('invasive-dashboard')">Invasive Species Dashboard</button>
              <button class="dropdown-item" onclick="switchTab('geographic-insights')">Geographic Insights</button>
              <button class="dropdown-item" onclick="switchTab('temporal-analysis')">Temporal Analysis</button>
              <button class="dropdown-item" onclick="switchTab('risk-assessment')" style="position: relative;">
                Risk Assessment & Alerts
                <span id="risk-notification-badge" class="notification-badge danger" style="display: none;">0</span>
              </button>
            </div>
          </div>
        </div>

        <div id="sightings-empty" class="muted" style="margin:.5rem 0; display:none;">
          No sightings yet.
        </div>

        <!-- Sightings Tab Content -->
        <div id="sightings-tab" class="tab-content active">
          <div id="sightings-container">
            <!-- Sightings will be populated here -->
          </div>
        </div>

        <!-- Analytics Tab Contents -->
        <div id="species-analytics-tab" class="tab-content">
          <div id="species-analytics-container">
            <!-- Species Analytics will be populated here -->
          </div>
        </div>

        <div id="invasive-dashboard-tab" class="tab-content">
          <div id="invasive-dashboard-container">
            <!-- Invasive Species Dashboard will be populated here -->
          </div>
        </div>

        <div id="geographic-insights-tab" class="tab-content">
          <div id="geographic-insights-container">
            <!-- Geographic Insights will be populated here -->
          </div>
        </div>

        <div id="temporal-analysis-tab" class="tab-content">
          <div id="temporal-analysis-container">
            <!-- Temporal Analysis will be populated here -->
          </div>
        </div>

        <div id="risk-assessment-tab" class="tab-content">
          <div id="risk-assessment-container">
            <!-- Risk Assessment will be populated here -->
          </div>
        </div>
      </main>

      <script type="module" src="/js/sightings.js"></script>
  </body>

</html>