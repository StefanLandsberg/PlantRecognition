<!doctype html>
<html lang="en">
<%- include('partials/head', { title: text.settings.title, styles: ['/css/app.css'] }) %>

<body>
  <%- include('partials/nav') %>

  <div class="container" style="max-width:720px;margin:2rem auto;">
    <h1 style="margin-bottom:1.5rem;"><%= text.settings.header %></h1>

    <div class="setting-item">
      <label for="theme-toggle"><%= text.settings.dark_mode_label %></label>
      <input type="checkbox" id="theme-toggle">
    </div>

    <div class="setting-item">
      <label for="color-blindness"><%= text.settings.color_blind_mode_label %></label>
      <select id="color-blindness">
        <option value="none"><%= text.settings.color_blind_off_option %></option>
        <option value="protanopia">Protanopia</option>
        <option value="deuteranopia">Deuteranopia</option>
        <option value="tritanopia">Tritanopia</option>
      </select>
    </div>

    <div class="setting-item">
      <label for="language-select"><%= text.settings.language_label %></label>
      <select id="language-select">
        <option value="en" <%= currentLang === 'en' ? 'selected' : '' %>><%= text.settings.language_en_option %></option>
        <option value="afr" <%= currentLang === 'afr' ? 'selected' : '' %>><%= text.settings.language_afr_option %></option>
        <option value="zulu" <%= currentLang === 'zulu' ? 'selected' : '' %>><%= text.settings.language_zulu_option %></option>
      </select>
    </div>

    <div class="button-group" style="gap:.5rem;display:flex;justify-content:flex-end;margin-top:1rem;">
      <button id="cancel-btn" type="button"><%= text.settings.cancel_button %></button>
      <a class="button" href="/app" id="apply-btn"><%= text.settings.apply_button %></a>
    </div>
  </div>

  <script src="/js/settings.js"></script>
</body>
</html>
